<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	<!-- _________________________HOME_______________________________________________ -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@drawable/coloryellow">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:paddingTop="10dip"
			android:paddingBottom="10dip">
			<TextView
				android:text="@string/strAccount"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/txtAccount"
				android:textColor="@color/black">
			</TextView>
		</LinearLayout>
	</LinearLayout>
	<!-- _________________________BODY EDIT_______________________________________________ -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="horizontal">
		<!-- _________________________IDs_______________________________________________ -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1.5"
			android:orientation="vertical">
			<!-- _________________________ CHARGE _______________________________________________ -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:gravity="center_horizontal|center_vertical">
				<TextView
					android:padding="3dip"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/txtCharge"
					android:text="@string/strCharge"></TextView>
			</LinearLayout>
			<!-- _________________________ ITEM _______________________________________________ -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:padding="3dip"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/txtItem"
					android:text="@string/strItem"></TextView>
			</LinearLayout>
			<!-- _________________________ PLACE _______________________________________________ -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:padding="3dip"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/txtPlace"
					android:text="@string/strPlace"></TextView>
			</LinearLayout>
		</LinearLayout>
		<!-- _________________________ EDIT TEXT _______________________________________________ -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center"
			android:paddingRight="10dip">
			<!-- _________________________ CHARGE _______________________________________________ -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<EditText
					android:numeric="signed"
					android:width="200dip"
					android:id="@+id/edtCharge"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"></EditText>
			</LinearLayout>
			<!-- _________________________ ITEM _______________________________________________ -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<AutoCompleteTextView
					android:width="200dip"
					android:text=""
					android:maxLength="15"
					android:id="@+id/edtItem"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"></AutoCompleteTextView>
			</LinearLayout>
			<!-- _________________________ PLACE _______________________________________________ -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<AutoCompleteTextView
					android:width="200dip"
					android:maxLength="15"
					android:text=""
					android:id="@+id/edtPlace"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"></AutoCompleteTextView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<!-- _________________________ DIVIDER _______________________________________________ -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:orientation="horizontal"
		android:layout_marginRight="20dp"
		android:layout_marginLeft="20dp"
		android:background="@drawable/coloryellow">
		<View
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/txtAccount"
			android:textColor="@color/black">
		</View>
	</LinearLayout>
	<!-- _________________________BODY BUTTONS_______________________________________________ -->
	<!-- _________________________BUTTONS_______________________________________________ -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0.5"
		android:orientation="horizontal">
		<!-- _________________________BUTTON1_______________________________________________ -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center">
			<ImageButton
				android:background="@color/white"
				android:src="@drawable/note"
				android:id="@+id/btnNotes"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></ImageButton>
			<TextView
				android:padding="6dip"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/txtNotes"
				android:text="@string/strNotes"></TextView>
		</LinearLayout>
		<!-- _________________________BUTTON2_______________________________________________ -->
		<LinearLayout
			android:id="@+id/linearLayout1"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:layout_weight="1"
			android:orientation="vertical">
			<ImageButton
				android:background="@color/white"
				android:src="@drawable/photo"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/btnPhoto"></ImageButton>
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/txtPhoto"
				android:padding="6dip"
				android:text="@string/strPhoto"></TextView>
		</LinearLayout>
		<!-- _________________________BUTTON3_______________________________________________ -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center">
			<ImageButton
				android:background="@color/white"
				android:src="@drawable/link"
				android:id="@+id/btnFile"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"></ImageButton>
			<TextView
				android:padding="6dip"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/txtFile"
				android:text="@string/strFile"></TextView>
		</LinearLayout>
	</LinearLayout>
	<!-- _________________________AUTOGENERATED_______________________________________________ -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0.2"
		android:orientation="vertical">
		<!-- _________________________TITLE_______________________________________________ -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:orientation="vertical"
			android:layout_weight="0.5"
			android:gravity="center_horizontal"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_weight="1"
				android:orientation="vertical"
				android:gravity="center_horizontal"
				android:layout_height="wrap_content">
				<TextView
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:gravity="center_horizontal"
					android:id="@+id/txtAuto"
					android:text="@string/strAuto"></TextView>
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:orientation="horizontal"
				android:layout_marginRight="20dp"
				android:layout_marginLeft="20dp"
				android:background="@drawable/coloryellow">
				<View
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/txtAccount"
					android:textColor="@color/black">
				</View>
			</LinearLayout>
			<!-- _________________________DATA AND BUTTON_______________________________________________ -->
			<LinearLayout
				android:layout_weight="1"
				android:orientation="horizontal"
				android:gravity="center_horizontal|center_vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<!-- _________________________TEXT_______________________________________________ -->
				<LinearLayout
					android:layout_weight="1"
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent">
					<!-- _________________________TEXT1_______________________________________________ -->
					<LinearLayout
						android:layout_weight="1"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:id="@+id/txtDateTag"
							android:text="@string/strDate"></TextView>
						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:id="@+id/txtDate"></TextView>
					</LinearLayout>
					<!-- _________________________TEXT2_______________________________________________ -->
					<LinearLayout
						android:layout_weight="1"
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:gravity="center_vertical"
						android:layout_height="wrap_content">
						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:id="@+id/txtAddressTag"
							android:text="@string/strAddress"></TextView>
						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:id="@+id/txtAddress"></TextView>
					</LinearLayout>
				</LinearLayout>
				<!-- _________________________BUTTON_______________________________________________ -->
				<LinearLayout
					android:layout_weight="0.1"
					android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent">
					<Button
						android:text="@string/strChangeDateAddress"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:id="@+id/btnAddressChange"></Button>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<!-- _________________________ACCEPT_______________________________________________ -->
	<Button
		android:text="@string/strAccept"
		android:id="@+id/btnAccept"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"></Button>
</LinearLayout>